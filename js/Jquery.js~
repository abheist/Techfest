var main = function() {
  /* Push the body and the nav over by 285px over */
 
	  $('.icon-follow').click(function() {
    $('.follow').animate({
      right: "0px"
    }, 200);

    $('body').animate({
      right: "200px"
    }, 200);
  });

  /* Then push them back */

	  $('.icon-close').click(function() {
    $('.follow').animate({
      right: "-200px"
    }, 200);

    $('body').animate({
      right: "0px"
    }, 200);
  });
};


$(document).ready(main);
